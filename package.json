{
    "name": "fd-backend",
    "version": "0.0.1",
    "author": "DustTail",
    "description": "",
    "keywords": [],
    "main": "dist/main.js",
    "scripts": {
        "build": "nest build",
        "start": "nest start",
        "start:dev": "cross-env NODE_ENV=development nest start --watch",
        "start:debug": "cross-env NODE_ENV=development nest start --debug --watch",
        "start:prod": "cross-env NODE_ENV=production node dist/main",
        "db:refresh:test": "cross-env NODE_ENV=test npx sequelize db:drop && cross-env NODE_ENV=test npx sequelize db:create && cross-env NODE_ENV=test npx sequelize db:migrate",
        "db:refresh:dev": "cross-env NODE_ENV=development npx sequelize db:drop && cross-env NODE_ENV=development npx sequelize db:create && cross-env NODE_ENV=development npx sequelize db:migrate",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "npm run sequelize:refresh:test && jest",
        "test:watch": "npm run sequelize:refresh:test && jest --watch",
        "test:cov": "npm run sequelize:refresh:test && jest --coverage",
        "test:debug": "npm run sequelize:refresh:test && node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "npm run sequelize:refresh:test && jest --config ./test/jest-e2e.json"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/DustTail/fd-backend.git"
    },
    "bugs": {
        "url": "https://github.com/DustTail/fd-backend/issues"
    },
    "homepage": "https://github.com/DustTail/fd-backend#readme",
    "dependencies": {
        "@nestjs/common": "8.4.3",
        "@nestjs/config": "2.0.0",
        "@nestjs/core": "8.4.3",
        "@nestjs/passport": "^8.2.1",
        "@nestjs/platform-fastify": "8.4.3",
        "@nestjs/sequelize": "^8.0.0",
        "@nestjs/swagger": "5.2.1",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.13.2",
        "cross-env": "^7.0.3",
        "fastify-swagger": "^5.1.0",
        "google-auth-library": "7.14.1",
        "jsonwebtoken": "^8.5.1",
        "mysql2": "^2.3.3",
        "nestjs-i18n": "9.0.3",
        "passport": "^0.5.2",
        "passport-http-bearer": "^1.0.1",
        "redis": "^4.0.6",
        "reflect-metadata": "0.1.13",
        "rxjs": "7.5.5",
        "sequelize": "^6.19.0",
        "sequelize-cli": "^6.4.1",
        "sequelize-typescript": "^2.1.3"
    },
    "devDependencies": {
        "@faker-js/faker": "^6.3.1",
        "@nestjs/cli": "8.2.4",
        "@nestjs/testing": "^8.4.4",
        "@types/jest": "^27.5.0",
        "@types/jsonwebtoken": "^8.5.8",
        "@types/node": "17.0.23",
        "@types/passport-http-bearer": "^1.0.37",
        "@types/sequelize": "^4.28.12",
        "@types/supertest": "^2.0.12",
        "@typescript-eslint/eslint-plugin": "5.17.0",
        "@typescript-eslint/parser": "5.17.0",
        "eslint": "8.12.0",
        "jest": "^28.1.0",
        "jest-cli": "^28.1.0",
        "supertest": "^6.2.3",
        "ts-jest": "^28.0.2",
        "typescript": "4.6.3"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": ".",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "src/*.(t|j)s",
            "src/**/*.(t|j)s",
            "test/*.(t|j)s",
            "test/**/*.(t|j)s"
        ],
        "coverageDirectory": "coverage",
        "testEnvironment": "node",
        "moduleNameMapper": {
            "^src/(.*)$": "<rootDir>/src/$1",
            "^test/(.*)$": "<rootDir>/test/$1"
        }
    }
}
